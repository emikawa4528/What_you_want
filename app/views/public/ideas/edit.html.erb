<div class="container">
  <div class="row">
    <div class="mx-auto col-10">
      <h2>投稿を編集</h2>
      <%= form_with model: @idea, url: idea_path, method: :patch, local: true do |f| %>
        <% if @idea.idea_images.attached? %>
          <%= image_tag 'wyw-ye.jpg', style: "width: 20px;" %>
          選択済みの写真（削除する写真にチェックをつけてください）
          <div class="idea_images_box">
            <% @idea.idea_images.each do |image| %>
              <div class="idea_images">
                <div class="check_box"><%= f.check_box :idea_image_ids, { multiple: true }, image.id, false %></div>
                <label for="idea_image_ids_<%= image.id %>" ><%= image_tag image, style: "width: 200px;" %></label>
              </div>
            <% end %>
          </div>
        <% end %>
        <div class="form-group">
          <%= image_tag 'wyw-ye.jpg', style: "width: 20px;" %>
          <%= f.label :idea_images, "写真" %>
          <%= f.file_field :idea_images, class: "form-control-file", multiple: true %>
        </div>
        <div class="form-group">
          <%= image_tag 'wyw-ye.jpg', style: "width: 20px;" %>
          <%= f.label :title, "タイトル" %>(※必須)
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= image_tag 'wyw-ye.jpg', style: "width: 20px;" %>
          <%= f.label :body, "内容" %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "編集する", class: 'btn btn-outline-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>