<div class="container">
  <div class="row">
    <div class="mx-auto col-10">
      <h2><%= @member.name %>さんのフォロワー(<%= @member.followers.count %>人)</h2>
      <% if @members.exists? %>
        <%= render 'public/members/index', members: @members %>
      <% else %>
        <p>フォロワーはいません</p>
      <% end %>
    </div>
  </div>
  <%= paginate @members %>
</div>